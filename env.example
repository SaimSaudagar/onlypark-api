# Database Configuration
DB_HOST_NAME=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=onlypark_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION_TIME=24h

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_SENDER_NAME=OnlyPark

# Application Configuration
PORT=3000
APP_URL=http://localhost:3000

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Redis Configuration (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Timezone Configuration
TIMEZONE=Australia/Brisbane

# OTP Configuration
OTP_EXPIRY_MINUTES=10

# Two Factor Authentication
TWO_FACTOR_AUTH_TOKEN_SECRET=your-2fa-secret
TWO_FACTOR_AUTH_TOKEN_SECRET_EXPIRATION_TIME=300

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
FACEBOOK_APP_ID=your-facebook-app-id
LINKEDIN_CLIENT_ID=your-linkedin-client-id
APPLE_CLIENT_ID=your-apple-client-id

# Firebase Configuration (for push notifications)
FCM_CREDENTIALS={"type":"service_account","project_id":"your-project"}

# Logging
LOGGING_PROVIDER=winston
LOGGING_DIR_NAME=logs

# Environment
NODE_ENV=development

# Geolocation
DEFAULT_GEOLOCATION_RADIUS=3000

# Email Templates URLs
EMAIL_CONFIRMATION_URL=http://localhost:3000/auth/confirm
RESET_PASSWORD_URL=http://localhost:3000/auth/reset-password
